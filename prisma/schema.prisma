generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id         String     @id @default(cuid())
  status     GameStatus
  players    User[]     @relation("games")
  winner     User?      @relation("Winner", fields: [winnerId], references: [id])
  winnerId   String?   
  gameOverAt String?
  field      Json?

  @@index([winnerId])
}

enum GameStatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}

model User {
  id           String   @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  games        Game[]   @relation("games")     
  winnerGames  Game[]   @relation("Winner")    
}
